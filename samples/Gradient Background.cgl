shader main {
vertex {
    input vec2 texCoord;
    output vec2 fragTexCoord;

    void main() {
        fragTexCoord = texCoord;
    }
}

fragment {
    input vec2 fragTexCoord;
    output vec4 fragColor;
    
    void main() {
        vec3 color = mix(bottomColor, topColor, fragTexCoord.y);
        fragColor = vec4(color, 1.0);
    }
}
}