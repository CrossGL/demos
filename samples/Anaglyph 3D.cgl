shader main {
    input vec2 texCoord;
    output vec4 fragColor;

    uniform sampler2D texture;
    uniform vec2 eyeOffset;

    void main() {
        vec4 leftColor = texture(texture, texCoord - eyeOffset);
        vec4 rightColor = texture(texture, texCoord + eyeOffset);
        fragColor = vec4(leftColor.r, rightColor.g, rightColor.b, 1.0);
    }
}
